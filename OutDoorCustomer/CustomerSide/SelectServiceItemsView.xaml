                </Grid.RowDefinitions>
                <Border BorderThickness="1"
                        BorderBrush="Black"
                        Grid.RowSpan="2" />
                <Grid Background="LightGray"
                      Margin="1">
                    <TextBlock x:Name="TxtTotalPackageCost"
                               Style="{DynamicResource TextBoxHeader20}"
                               Margin="0,0,5,0"
                               HorizontalAlignment="Right" />
                </Grid>
                <TreeView ItemsSource="{Binding League}"
